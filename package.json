{
  "name": "tachiweb",
  "productName": "TachiWeb",
  "homepage": "https://github.com/TachiWeb/TachiWeb-Server",
  "version": "0.0.1",
  "license": "MIT",
  "author": "nulldev <contactnulldev@gmail.com>",
  "contributors": [
    {
      "name": "inorichi"
    },
    {
      "name": "LigerX"
    }
  ],
  "description": "A port of the Tachiyomi manga reader to PCs.",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "distLinux": "yarn compile && electron-builder -l",
    "distWindows": "yarn compile && electron-builder -w",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "detect-port": "^1.3.0",
    "locate-java-home": "^1.1.2",
    "mkdirp2": "^1.0.4",
    "mousetrap": "^1.6.3",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-helmet": "^5.2.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0",
    "source-map-support": "^0.5.10",
    "stream-splitter": "^0.3.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "electron": "^4.0.7",
    "electron-builder": "^20.39.0",
    "electron-webpack": "^2.6.2",
    "webpack": "^4.29.6"
  },
  "resolutions": {
    "webpack-sources": "1.3.0",
    "which": "^1.3.1"
  },
  "build": {
    "appId": "xyz.nulldev.ts.bootstrap",
    "productName": "TachiWeb",
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "artifactName": "${productName}-${os}-${arch}.${ext}",
    "linux": {
      "category": "Network",
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${os}-${arch}-Setup.${ext}"
    },
    "snap": {
      "buildPackages": [
        "openjdk-8-jdk"
      ]
    },
    "deb": {
      "depends": [
        "java8-runtime-headless | java9-runtime-headless | java10-runtime-headless"
      ],
      "priority": "optional",
      "packageCategory": "web"
    },
    "pacman": {
      "depends": [
        "java-runtime-headless>=8"
      ]
    }
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.config.js"
    }
  }
}

