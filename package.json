{
  "name": "tachiweb",
  "productName": "TachiWeb",
  "homepage": "https://github.com/TachiWeb/TachiWeb-Server",
  "version": "0.0.1",
  "license": "MIT",
  "author": "nulldev <contactnulldev@gmail.com>",
  "contributors": [
    {
      "name": "inorichi"
    },
    {
      "name": "LigerX"
    }
  ],
  "description": "A port of the Tachiyomi manga reader to PCs.",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "distLinuxWindows": "yarn compile && electron-builder -lw",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "detect-port": "^1.2.3",
    "electron-builder-squirrel-windows": "^20.15.0",
    "find-java-home": "^0.2.0",
    "mkdirp2": "^1.0.4",
    "mousetrap": "^1.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "semantic-ui-css": "^2.3.2",
    "semantic-ui-react": "^0.81.1",
    "source-map-support": "^0.5.5",
    "stream-splitter": "^0.3.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0-beta.51",
    "electron": "^2.0.3",
    "electron-builder": "^20.19.0",
    "electron-webpack": "^2.0.1",
    "webpack": "^4.8.1"
  },
  "resolutions": {
    "webpack-sources": "1.1.0",
    "which": "^1.3.1"
  },
  "build": {
    "appId": "xyz.nulldev.ts.bootstrap",
    "productName": "TachiWeb",
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "category": "Network",
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "snap": {
      "buildPackages": [
        "openjdk-8-jdk"
      ]
    },
    "deb": {
      "depends": [
        "java8-runtime-headless | java9-runtime-headless | java10-runtime-headless"
      ],
      "priority": "optional",
      "packageCategory": "web"
    },
    "pacman": {
      "depends": [
        "java-runtime-headless>=8"
      ]
    }
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.config.js"
    }
  }
}
